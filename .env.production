# Configuration du serveur de production
PORT=3000
NODE_ENV=production

# Configuration de la base de donn√©es de production
DB_HOST=db
DB_USER=camet_prod_user
DB_PASSWORD=strong_prod_password
DB_NAME=camet_prod_db

# Configuration JWT pour la production
JWT_SECRET=strong_jwt_secret_key_for_production
JWT_EXPIRES_IN=12h

# Configuration de l'application
API_PREFIX=/api/v1
CORS_ORIGIN=https://camet.sncf.fr

# Configuration des logs
LOG_LEVEL=warn

# Configuration de la mise en cache
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=strong_redis_password

# Configuration de la sauvegarde
BACKUP_ENABLED=true
BACKUP_CRON="0 0 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backup